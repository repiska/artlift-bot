# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose.yml text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

